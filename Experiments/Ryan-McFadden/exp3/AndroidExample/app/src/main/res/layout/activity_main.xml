<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90D1EF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:text="EZ Recipes!"
        android:textColor="#673AB7"
        android:textSize="50dp"></TextView>

    <TextView
        android:id="@+id/main_sub_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:gravity="center"
        android:text="Home Page"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="20dp"
        android:translationX="152dp"
        android:translationY="-30dp" />

    <TextView
        android:id="@+id/main_username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:text="{{username}}"
        android:textColor="#000000"
        android:textSize="30dp"></TextView>


    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="20sp"></Button>

    <Button
        android:id="@+id/main_signup_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Signup"
        android:textColor="#ffffff"
        android:textSize="20sp"></Button>

    <Button
        android:id="@+id/main_logout_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Logout"
        android:textSize="20dp" />


</androidx.appcompat.widget.LinearLayoutCompat>